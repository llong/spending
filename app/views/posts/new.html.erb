<h1>Add a new post</h1>


<%= form_for @post do |f| %>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />
</p>

<p>
  <%= f.label :content %><br />
  <%= f.text_area :content %><br />
</p>

<p>
  <%= f.label :amount %><br />
  <%= f.text_field :amount %><br />
</p>

<p>
  <%= f.submit "Add a new Post" %>
</p>
<% end %>