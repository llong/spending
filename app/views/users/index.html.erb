<div class="btn btn-primary">
  <%= link_to 'Add New Item', new_user_path, :class => 'fa fa-plus' %>
</div>
<div class="container">


<div style="clear:both"></div>
<div class="column">
<h1>Lewis</h1>
<h2>Remaining Balance: $<%= @lewisSpent %></h2>

	<% @lewis.each do |user| %>
	    
	    <div class="item"> 
          <div class="row text-right">
	       <%= link_to '', edit_user_path(user), :class => "fa fa-pencil" %>
	       <%= link_to '', user, :confirm => "Are you sure you want to delete this?", :method => :delete, :class => 'fa fa-times' %> 
	       </div>

	       <%= user.title.split.map(&:capitalize).join(' ') %><br />
	       <%= user.details %><br />
	       <p>
	       <strong>Price:</strong> $<%= user.amount %><br />
	       <strong>Posted:</strong> <%= user.updated_at.localtime.strftime("%d %b, %Y %I:%M %p") %><br />
	       </p>
	       

	    </div>
 <% end %>
</div>



