<div class="container">
<h1>Add an Item</h1>

<%= form_for @item do |f| %>
  <p>
  <%= f.label :name %><br>
  <%= f.select :name, [['Lewis','Lewis'],['Xuemin','Xuemin']],:prompt => true %>
  </p>

  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :details %><br>
  <%= f.text_area :details %>
  </p>

  <p>
  <%= f.label :amount %><br>
  <%= f.text_field :amount %>
  </p>

  <p><%= f.submit 'Add Item' %></p>
<% end %>
</div>

