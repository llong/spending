 <div class="item"> 
          <div class="row text-right">
           <%= user.title.split.map(&:capitalize).join(' ') %>
	       <%= link_to '', edit_user_path(user), :class => "fa fa-pencil float-right" %>
	       <%= link_to '', user, :confirm => "Are you sure you want to delete this?", :method => :delete, :class => 'fa fa-times float-right' %> 
	          <p>
		       <strong>Price:</strong> $<%= number_with_precision(user.amount, :precision => 2) %><br />
		       <strong>Posted:</strong> <%= user.updated_at.localtime.strftime("%d %b, %Y") %><br />
		       </p>
	       </div>

	       <div class="details">
		       <%= user.details %><br />
		    
	       </div>

	    </div>