 <div class="item"> 
          <div class="row text-right">
          <div class="item-title">
           <%= user.title.split.map(&:capitalize).join(' ') %>
          </div>
			
		   <%= link_to '', user, :confirm => "Are you sure you want to delete this?", :method => :delete, :class => 'fa fa-times float-right' %> 
	       <%= link_to '', edit_user_path(user), :class => "fa fa-pencil float-right" %>
	          <p>
		       <strong>Price:</strong> $<%= number_with_precision(user.amount, :precision => 2) %></p>

		       <p><strong>Posted:</strong> <%= user.updated_at.localtime.strftime("%d %b, %Y") %>
		       </p>
	       </div>

	       <div class="details">
		       <p><%= user.details %></p>
		    
	       </div>

	    </div>